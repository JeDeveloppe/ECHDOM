{% extends 'site/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<section class="signup-section">
    <div class="container d-flex justify-content-center">
        <div class="signup-container w-100">
            <div class="signup-card shadow text-center">
                <span class="signup-icon"><i class="fas fa-user-plus"></i></span>
                <h1 class="fw-bold mb-2">Inscription</h1>
                <p class="mb-4 text-muted">Rejoignez WORKaway et commencez à échanger pour améliorer votre quotidien !</p>
                
                {{ form_start(registrationForm) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse e-mail', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.email.vars.id }}">Adresse e-mail</label>
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.plainPassword.vars.id }}">Mot de passe</label>
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.lastName, {'attr': {'placeholder': 'Nom', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.lastName.vars.id }}">Nom</label>
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.firstName, {'attr': {'placeholder': 'Prénom', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.firstName.vars.id }}">Prénom</label>
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.phoneNumber, {'attr': {'placeholder': 'Téléphone', 'class': 'form-control'}}) }}
                        <label for="{{ registrationForm.phoneNumber.vars.id }}">Téléphone</label>
                        {{ form_errors(registrationForm.phoneNumber) }}
                    </div>
                    <div class="form-check mb-3 text-start">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                            {{ form_label(registrationForm.agreeTerms) }}
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn btn-signup btn-lg w-100 mt-2 mb-3">Créer mon compte</button>
                {{ form_end(registrationForm) }}
                
                <div class="mt-2 text-muted" style="font-size:0.95rem;">
                    <i class="fa-solid fa-lock"></i> Vos données sont protégées et ne seront jamais partagées.
                </div>
                <div class="mt-3">
                    <span>Déjà inscrit ? <a href="{{ path('site_login') }}" class="link-primary">Connectez-vous</a></span>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}