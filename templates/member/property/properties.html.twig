{% extends 'site/base.html.twig' %}

{% block title %}Mes propriétés à l'échange{% endblock %}

{% block nav %}
    {% include "member/components/_nav.html.twig" %}
{% endblock %}

{% block body %}
    <div class="container my-5 content-offset">
        <h1 class="text-center mb-5">Mes propriétés à l'échange</h1>

        <div class="row">
            <div class="col-12 text-end mb-4">
                <a href="{{ path('member_new_property') }}" class="btn btn-success btn-lg rounded-pill shadow px-4">
                    <i class="fas fa-plus me-2"></i> Ajouter une nouvelle propriété
                </a>
            </div>
        </div>

        {% if properties is not empty %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for property in properties %}
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-3">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-primary">{{ property.address }}</h5>
                                <p class="card-text text-muted mb-3">
                                    {{ property.description|length > 100 ? property.description|slice(0, 100) ~ '...' : property.description }}
                                </p>
                                <ul class="list-group list-group-flush mb-3">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Pièces :</span>
                                        <span class="fw-bold">{{ property.rooms }}</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Surface :</span>
                                        <span class="fw-bold">{{ property.surface }} m²</span>
                                    </li>
                                </ul>
                                <div class="mt-auto text-center">
                                    <a href="{{ path('memberproperty_details', {id: property.id}) }}" class="btn btn-primary w-100">
                                        Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                Vous n'avez pas encore ajouté de bien immobilier.
            </div>
        {% endif %}
    </div>
{% endblock %}
