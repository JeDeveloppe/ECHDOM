{% extends 'site/base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}
    <style>
        #loader-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            z-index: 9999;
            font-family: Arial, sans-serif;
        }

        #loader-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        
        #loader {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        #loader-text {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        #loader-details {
            margin-top: 10px;
            color: #555;
        }
        
        #loader-distance, #loader-duration {
            font-weight: bold;
        }
    </style>
    <div id="loader-container" style="display: none;">
        <div id="loader-content">
            <p id="loader"></p>
            <p id="loader-text">Recherche en cours...</p>
            <div id="loader-details">
                <span id="loader-distance"></span>
                <span id="loader-duration"></span>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Votre lieu de travail</div>
                <div class="card-body">
                {% for workplace in app.user.workplaces %}
                    {{ workplace.address }}
                {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Critères de recherche</div>
                <div class="card-body">
                    {{ form_start(form)}}
                       <div class="my-custom-class-for-errors">
                            {{ form_errors(form) }}
                        </div>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.duration) }}
                            </div>
                            <div class="col" id="some-custom-id">
                                {{ form_row(form.distance) }}
                            </div>
                            <div class="col-12 d-flex justify-content-center mt-3">
                                <button type="submit" id="submitButton" class="btn btn-primary">Rechercher</button>
                            </div>
                        </div>
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            {% if map is not null %}
                {{ ux_map(map, {style: 'height: 600px;'}) }}
            {% else %}
            <p>Aucun lieu disponible pour le moment.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }} {# Important pour ne pas écraser les autres scripts de la page de base #}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const rangeDurationInput = document.getElementById('search_homes_duration');
            const rangeDurationValueDisplay = document.getElementById('search_homes_duration_help');
            const rangeDistanceInput = document.getElementById('search_homes_distance');
            const rangeDistanceValueDisplay = document.getElementById('search_homes_distance_help');
            const submitButton = document.getElementById('submitButton');
            const loaderContainer = document.getElementById('loader-container');

            rangeDurationInput.addEventListener('input', (event) => {
                rangeDurationValueDisplay.textContent = 'Durée maximale choisie: '+event.target.value+' minutes';
            });
            rangeDistanceInput.addEventListener('input', (event) => {
                rangeDistanceValueDisplay.textContent = 'Distance maximale choisie: '+event.target.value+' kilomètres';
            });

            submitButton.addEventListener('click', () => {
                loaderContainer.style.display = 'flex';
            });
        });

    </script>
{% endblock %}
